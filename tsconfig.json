{
    "compilerOptions": {
        "outDir": "./dist",
        "declaration": true,
        "emitDeclarationOnly": true,
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "lib": [
            "es2015",
            "dom"
        ]
    },
    "include": [
        "*.js",
        "lib/**/*.js",
        "services/**/*.js",
        "utils/**/*.js"
    ]
}